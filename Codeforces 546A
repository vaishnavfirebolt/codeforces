import java.util.Scanner;

public class A {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt(), b = sc.nextInt(), c = sc.nextInt();
        long x = (long) (0.5*c*a*(c+1)) - b;
        System.out.println(Math.max(0, x));   
    }
}
