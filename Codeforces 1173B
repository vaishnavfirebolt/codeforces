package day58;

import java.util.Scanner;

public class Codeforces1173B {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		System.out.println(n/2  + 1 );
		int x = 1 , y = 1; 
		for(int i = 0 ;i < n ; i++) {
			System.out.println(x + " " + y);
			if(x < y) {
				x++;
			}else y++;
		}
		
		sc.close();
	}
}
