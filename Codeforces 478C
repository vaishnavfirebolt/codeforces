package day2;

import java.util.*;
import java.util.Scanner;

public class Codeforces478C {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		long a[] = new long[3];
		for(int i = 0 ; i < 3 ; i++)a[i] = sc.nextInt();
		Arrays.sort(a);
		if(a[2] / 2 >= a[1] + a[0]) System.out.println(a[1] + a[0]);
        else System.out.println((a[0] + a[1] + a[2]) / 3 );
		
		sc.close();
	}
}
