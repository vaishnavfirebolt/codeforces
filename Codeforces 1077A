package day13;

import java.util.Scanner;

public class CD1077A {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
	
		int t = sc.nextInt();
		for(int i = 0 ; i < t ; i++) {
			long a = sc.nextLong(),b = sc.nextLong() , k = sc.nextLong();
			System.out.println( (a - b) * (k / 2) + a * (k & 1));
		}
		
		sc.close();

	}

}
